<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/sky_blue"
    android:id="@+id/nav_header">

    <ImageView
        android:id="@+id/chat_room_info_setting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_settings_24" />

    <TextView
        android:id="@+id/menu_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="채팅방 이름"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/chat_room_info_setting"
        app:layout_constraintTop_toBottomOf="@+id/chat_room_info_setting" />

    <TextView
        android:id="@+id/chat_room_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="10명"
        app:layout_constraintStart_toStartOf="@+id/menu_header_name"
        app:layout_constraintTop_toBottomOf="@+id/menu_header_name" />

    <ImageView
        android:id="@+id/chat_room_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_room_member_count"
        app:layout_constraintEnd_toStartOf="@+id/menu_header_name"
        app:layout_constraintTop_toTopOf="@+id/chat_room_info_setting"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>